generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ApplicationStatus {
  SAVED
  APPLIED
  OA
  INTERVIEW
  REJECTED
  OFFER
  GHOSTED
  WITHDRAWN
}


model User {
  id            String    @id @default(uuid())
  firstName     String
  lastName      String
  email         String    @unique
  createdAt     DateTime  @default(now())

  applications  Applications[]

  @@id(name: "fullName" , fields: [firstName, lastName])
}

model Applications {
  id        String              @id @default(uuid())
  userID    String

  //user ID is foreign key, it references id in User, and onDelete:Cascade means if user gets deleted all its associated applications will also
  user      User                @relation(fields: [userID], references [id], onDelete: Cascade)

  company   String
  role      String
  location  String?
  url       String?
  status    ApplicationStatus   @default(SAVED)

  appliedAt DateTime
  salary    Int?

  notes     Note[]
  contacts  Contact[]

  createdAt DateTime  @default(now())
}


