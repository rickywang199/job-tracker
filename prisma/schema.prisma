generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ApplicationStatus {
  SAVED
  APPLIED
  OA
  INTERVIEW
  REJECTED
  OFFER
  GHOSTED
  WITHDRAWN
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  applications Application[]
}

model Application {
  id     String @id @default(uuid())
  userID String

  //user ID is foreign key, it references id in User, and onDelete:Cascade means if user gets deleted all its associated applications will also
  user User @relation(fields: [userID], references: [id], onDelete: Cascade)

  company  String
  role     String
  location String?
  url      String?
  status   ApplicationStatus @default(SAVED)

  appliedAt DateTime
  salary    Int?

  notes    Note[]
  contacts Contact[]
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Note {
  id            String      @id @default(cuid())
  applicationID String
  application   Application @relation(fields: [applicationID], references: [id], onDelete: Cascade)
  text          String
  updatedAt     DateTime    @updatedAt
  createdAt     DateTime    @default(now())
}

model Contact {
  id            String      @id @default(cuid())
  applicationID String
  application   Application @relation(fields: [applicationID], references: [id], onDelete: Cascade)
  firstName     String?
  lastName      String?
  email         String?
  role          String?
  linkedin      String?
  notes         String?
  updatedAt     DateTime    @updatedAt
  createdAt     DateTime    @default(now())
}
